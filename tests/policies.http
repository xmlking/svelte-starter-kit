query SearchPolicies(
  $where: policies_bool_exp
  $limit: Int = 50
  $offset: Int = 0
  $orderBy: [policies_order_by!] = [{ updated_at: desc_nulls_last }]
) {
  counts: policies_aggregate(where: $where) {
    aggregate {
      count
    }
  }
  policies(
    order_by: $orderBy
    limit: $limit
    offset: $offset
    where: $where
  ) {
    id
    display_name
    description
    tags
    annotations
    disabled
    template
    created_at
    updated_at
    valid_from
    valid_to
    subject_display_name
    subject_domain
    subject_id
    subject_secondary_id
    subject_type
    source_address
    source_port
    destination_address
    destination_port
    protocol
    action
    direction
    app_id
    weight
  }
}


{
  "where": {
    "deleted_at": { "_is_null": true },
    "subject_type": { "_eq": "subject_type_user" },
    "display_name": { "_like": "%user%" }
  },
  "limit": 2,
  "orderBy": [{ "updated_at": "desc_nulls_last" }]
}

